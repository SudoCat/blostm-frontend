---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Welcome to Blostm.">
	<main data-theme="glitch">
		<div class="content">
			<h1>Welcome to <span class="text-gradient">Blostm</span></h1>
			<p class="instructions">
				To get started, open the directory <code>src/pages</code> in your project.<br />
				<strong>Code Challenge:</strong> Tweak the "Welcome to Astro" message above.
			</p>
			<ul role="list" class="link-card-grid">
				<Card
					href="/categories/flowers"
					title="Flowers"
					body="Bring some beautiful blossoms to your abode."
				/>
				<Card
					href="/categories/shrubs"
					title="Shrubs"
					body="Search through an array of leafy greens."
				/>
				<Card
					href="/categories/succulents"
					title="Succulents"
					body="Peruse some succulents."
				/>
				<Card
					href="/succulents/trees"
					title="Trees"
					body="Explore the world of trees."
				/>
			</ul>
		</div>
	</main>
</Layout>

<style>
	main {
		display: grid;
		grid-template-columns: 3fr 5fr 1fr;
		margin: auto;
		min-height: 100vh;
		padding: 1.5rem;
		box-sizing: border-box;
		/* background-image: url("/public/images/hero/martin-knize-JjT_7MwREm4-unsplash.jpg"); */
		background-size: cover;
		background-color: rgba(var(--colour-dark), 1);
		animation: cover 60s steps(6) infinite forwards;
	}
	@keyframes cover {
		0% {
			background-image: url("public/images/hero/calvin-kurlekar-jf-kMyCffZA-unsplash.jpg");
		}
		16.6% {
			background-image: url("/public/images/hero/glen-carrie-y8dgMhxaoKk-unsplash.jpg");
		}
		33% {
			background-image: url("/public/images/hero/ignacio-correia-1_yycyoMT6g-unsplash.jpg");
		}
		50% {
			background-image: url("/public/images/hero/martin-knize-JjT_7MwREm4-unsplash.jpg");
		}
		66.6% {
			background-image: url("/public/images/hero/robert-katzki-KLcaQxlmhtk-unsplash.jpg");
		}
		83.33% {
			background-image: url("/public/images/hero/veronica-reverse-qYwyRF9u-uo-unsplash.jpg");
		}
	}
	.content {
		grid-column: 2;
		position: relative;
		max-width: 680px;
		margin: auto;
		padding: var(--space-m);
	}
	[data-theme="glass"] .content {
		border: 1px solid rgba(var(--colour-light), 0.9);
		border-radius: 30px;
		backdrop-filter: blur(10px);
		background-image: linear-gradient(#ffffffc2 0%, #ffffff1f 10%, #ffffff36);
	}
	[data-theme="glitch"] .content {
		border: 1px solid rgba(var(--colour-light), 0.9);
		/* border-radius: 0 120px 0 120px; */
	}
	.content > * {
		position: relative;
		z-index: 1;
	}
	[data-theme="glass"] .content::before {
		--bg-alpha: 0.5;
		content: '';
		position: absolute;
		inset: -2px;
		border-radius: inherit;
		border: 1px solid rgba(var(--colour-dark), 0.05);
	}
	[data-theme="glitch"] .content::before {
		content: '';
		position: absolute;
		inset: -16px;
		border-radius: 200px 0 200px 0;
		border: 1px solid rgba(var(--colour-dark), 0.05);
		background-color: rgba(var(--colour-accent), 0.6);
		mix-blend-mode: difference;
	}
	h1 {
		margin-top: 0;
		margin-bottom: var(--space-l);
		line-height: 0.8;
		text-align: right;
		color: var(--colour-text-light);
		mix-blend-mode: exclusion;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
		font-style: italic;
	}
	.instructions {
		left: calc(-1*var(--space-xl));
		line-height: 1.6;
		margin: 1.5rem 0;
		/* border: 2px solid rgba(var(--colour-primary), 50%); */
		background-color: rgba(var(--colour-light), 1);
		padding: 1rem;
		border-radius: 0 0 10rem 0;
		outline-offset: 4px;
	}
	.instructions::before {
		content: '';
		position: absolute;
		inset: -6px 6px 6px -12px;
		border: 2px dotted rgb(var(--colour-secondary));
		border-radius: inherit;
		mix-blend-mode: exclusion;
		pointer-events: none;
	}
	.instructions code {
		font-size: 0.875em;
		font-weight: bold;
		background: rgba(var(--accent), 12%);
		color: rgb(var(--accent));
		border-radius: 4px;
		padding: 0.3em 0.45em;
	}
	.instructions strong {
		color: rgb(var(--accent));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1.5rem;
		padding: 0;
	}
</style>
